      FORMDATA(003)=CAPITALIZE(MEMBERSTREET)+" "+CAPITALIZE(MEMBEREXADDRESS)
     END
    FORMDATA(004)=CAPITALIZE(MEMBERCITY)+", "+MEMBERSTATE+"  "+MEMBERZIP    

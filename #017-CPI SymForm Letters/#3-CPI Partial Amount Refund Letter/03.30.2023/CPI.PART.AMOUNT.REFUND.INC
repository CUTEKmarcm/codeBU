  CALL DATESPELL    
  FORMDATA(014)=SPELLCHAR 
  
  FORMDATA(015)=FORMAT("#,##9.99",NEWLOANPAYMENT)
  FORMDATA(016)=FORMAT("#,##9.99",LOANPAYMENT)
  
  FORMDATA(017)=FORMAT("##9",ForTheNext)
  
  SPELLDATE=LOANDUEDATE
  CALL DATESPELL
  FORMDATA(018)=SPELLCHAR  
  
  FORMDATA(019)=""
  FORMDATA(020)=""

  FOR FORMLOOP=1 TO FIELDMAX
   DO
    TEMPCHAR=FORMDATA(FORMLOOP)
